{
    "dataset": "sarbud",
    "method": "segmentor",
    "data": {
      "image_tool": "cv2",
      "input_mode": "single",
      "num_classes": 1,
      "data_dir": "/gemini/data-1",
      "workers": 8
    },
   "train": {
      "batch_size": 16
    },
    "val": {
      "batch_size": 16
    },
    "test": {
      "batch_size": 16,
      "out_dir": "/gemini/code/boundary_aware/seg_results/sarbud/"
    },
    "normalize": {
      "div_value": 255.0,
      "mean": [0.5],
      "std": [0.5]
    },
    "checkpoints": {
      "checkpoints_name": "decouple",
      "checkpoints_dir": "./checkpoints/decouple",
      "save_epoch": 1
    },
    "network":{
      "multi_grid": [1, 1, 1],
      "model_name": "decouple",
      "bn_type": "torchbn",
      "stride": 8,
      "factors": [[8, 8]]
    },
    "logging": {
      "logfile_level": "info",
      "stdout_level": "info",
      "log_file": "./log/sarbud/decouple.log",
      "log_format": "%(asctime)s %(levelname)-7s %(message)s",
      "rewrite": true
    },
    "lr": {
      "base_lr": 5e-4,
      "metric": "epoch",
      "lr_policy": "step",
      "step": {
        "gamma": 0.98,
        "step_size": 1
      }
    },
    "solver": {
      "display_iter": 20,  
      "max_epoch": 100
    },
    "optim": {
      "optim_method": "adam",
      "adam": {
        "betas": [0.9, 0.999],
        "eps": 1e-08,
        "weight_decay": 0.0001
      },
      "sgd": {
        "weight_decay": 0.0005,
        "momentum": 0.9,
        "nesterov": false
      }
    },
    "loss": {
      "loss_type": "dice_loss",
      "params": {
        "ce_reduction": "mean"
      }
    },
    "metric":["acc", "f1", "iou", "kappa"],
    "other_boundary":{
        "name":"decouple",
        "aux_weight":1.0,
        "edge_weight":1.0
    }
}
